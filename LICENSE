
## 16. `setup.sh`
```bash
#!/bin/bash

echo "ğŸš€ Setting up Mobile Dev Hub..."

# Update system
sudo apt-get update

# Install Node.js if not present
if ! command -v node &> /dev/null; then
    echo "ğŸ“¦ Installing Node.js..."
    curl -fsSL https://deb.nodesource.com/setup_18.x | sudo -E bash -
    sudo apt-get install -y nodejs
fi

# Install global npm packages
echo "ğŸ“¦ Installing global packages..."
sudo npm install -g \
    live-server \
    nodemon \
    create-react-app \
    vite \
    qrcode-terminal

# Install project dependencies
echo "ğŸ“¦ Installing project dependencies..."
npm install

# Create necessary directories
echo "ğŸ“ Creating project structure..."
mkdir -p projects
mkdir -p config

# Set up default templates
echo "ğŸ“‹ Setting up templates..."
if [ ! -f "templates/react-vite/package.json" ]; then
    mkdir -p templates/react-vite
    cat > templates/react-vite/package.json << 'EOF'
{
  "name": "react-vite-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^4.0.0",
    "vite": "^4.3.0"
  }
}
EOF
    cat > templates/react-vite/vite.config.js << 'EOF'
import { defineConfig } from 'vite'
import react from '@vitejs/plugin-react'

export default defineConfig({
  plugins: [react()],
  server: {
    host: '0.0.0.0',
    port: 3000
  }
})
EOF
fi

# Create AI config if needed
if [ ! -f "config/ai-config.json" ]; then
    echo "ğŸ¤– Creating AI config template..."
    cat > config/ai-config.json << 'EOF'
{
  "apiKey": "your-openai-api-key-here",
  "model": "gpt-3.5-turbo",
  "maxTokens": 1000
}
EOF
    echo "âš ï¸  Please update config/ai-config.json with your OpenAI API key"
fi

# Make scripts executable
echo "ğŸ”§ Making scripts executable..."
chmod +x scripts/*.js

# Set up live reload script
echo "ğŸ”„ Setting up live reload..."
cat > public/live-reload.js << 'EOF'
// Live reload client
(function() {
    const socket = new WebSocket('ws://' + window.location.hostname + ':35729');
    
    socket.onopen = function() {
        console.log('ğŸ”„ Live reload connected');
    };
    
    socket.onmessage = function(event) {
        const data = JSON.parse(event.data);
        if (data.type === 'reload') {
            console.log('ğŸ”„ Reloading due to file change:', data.file);
            setTimeout(() => window.location.reload(), 100);
        }
    };
    
    socket.onclose = function() {
        console.log('ğŸ”Œ Live reload disconnected');
        setTimeout(() => {
            console.log('ğŸ”„ Attempting to reconnect...');
            location.reload();
        }, 3000);
    };
})();
EOF

echo ""
echo "âœ… Setup complete!"
echo ""
echo "ğŸ“± To start:"
echo "   npm start"
echo ""
echo "ğŸ“‹ Or use VS Code tasks:"
echo "   Ctrl+Shift+P -> Run Task -> ğŸš€ Start All Services"
echo ""
echo "ğŸŒ Open the portal:"
echo "   http://localhost:5500"
echo ""
echo "ğŸ“² Scan the QR code with your phone to start coding!"
